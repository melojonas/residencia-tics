<%- include('./partials/headercadastro') %>
<body>
    <div class="container">
        <div class="container-cadastro" style="background-image: url('/img/emab.jpg')">
            <div class="wrap-cadastro">
                <form class="cadastro-form validate-form" method="POST" action="/auth/cadastro">
                    <span class="cadastro-form-logo">
                        <i class="zmdi zmdi-landscape"></i>
                    </span>

                    <span class="cadastro-form-title">
                        Cadastro
                    </span>

                    <div class="social-button">
                        <a href="#" class="google-btn">
                            <img src="/img/google-logo.png" alt="Google">
                        </a>
                        <a href="#" class="facebook-btn">
                            <img src="/img/facebook-logo.svg" alt="Facebook">
                        </a>
                        <a href="#" class="microsoft-btn">
                            <img src="/img/microsoft-logo.svg" alt="Microsoft">
                        </a>
                    </div>

                    <div class="divider">
                        <span class="divider-text">OU</span>
                    </div>

                    <div class="wrap-input validate-input">
                        <input class="input" type="email" name="email" placeholder="Usuário" autocomplete="on">
                        <span class="focus-input" data-placeholder="&#xf207;"></span>
                    </div>

                    <div class="wrap-input validate-input">
                        <input class="input" type="password" name="password" placeholder="Senha">
                        <span class="focus-input" data-placeholder="&#xf191;"></span>
                    </div>

                    <div class="container-cadastro-form-btn">
                        <button type="submit" class="cadastro-form-btn">
                            Cadastrar
                        </button>
                    </div>

                    <div class="text-center">
                        <a class="txt1" href="login">
                            Já tem uma conta? Faça o login.
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>

</html>